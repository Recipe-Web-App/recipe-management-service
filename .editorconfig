# EditorConfig helps maintain consistent coding styles
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.java]
indent_size = 2
max_line_length = 100

[*.xml]
indent_size = 2
max_line_length = 100

[*.yml]
indent_size = 2
max_line_length = 100

[*.yaml]
indent_size = 2
max_line_length = 100

[*.json]
indent_size = 2
max_line_length = 100

[*.sh]
indent_size = 2
max_line_length = 100
