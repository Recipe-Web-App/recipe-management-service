# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recipe_db
POSTGRES_SCHEMA=recipe_manager

# Recipe Management Database User
RECIPE_MANAGEMENT_DB_USER=recipe_user
RECIPE_MANAGEMENT_DB_PASSWORD=your_secure_password_here

# JWT Configuration (MUST match user-management-service)
JWT_SECRET=your-very-secure-secret-key-at-least-32-characters-long

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Service-to-Service Authentication (Optional)
SERVICE_AUTH_ENABLED=false
SERVICE_AUTH_KEY=

# Monitoring & Observability
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_RECIPE_MANAGER=INFO

# Security Configuration
JWT_EXPIRATION=86400000

# Performance & Resource Configuration
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=30000
