{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [100],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "java.format.enabled": true,
  "java.saveActions.organizeImports": true,
  "java.completion.importOrder": ["java", "javax", "com", "org"],
  "yaml.format.enable": true,
  "yaml.validate": true,
  "json.format.enable": true,
  "xml.format.enabled": true,
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",
  "checkstyle.enable": true,
  "checkstyle.configuration": "./checkstyle.xml",
  "checkstyle.run": "onSave",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.test.config": {
    "workingDirectory": "${workspaceFolder}",
    "vmargs": ["-Dfile.encoding=UTF-8"]
  },
  "java.project.sourcePaths": ["src/main/java"],
  "java.project.testSourcePaths": [
    "src/test/java",
    "src/test/unit/java",
    "src/test/component/java",
    "src/test/dependency/java",
    "src/test/performance/java"
  ],
  "java.project.outputPath": "target/classes",
  "java.project.testOutputPath": "target/test-classes",
  "cSpell.words": [
    "Amapstruct",
    "Asserion",
    "assertj",
    "codehaus",
    "Configurer",
    "COVEREDRATIO",
    "datafaker",
    "diffplug",
    "ekryd",
    "favorited",
    "flywaydb",
    "guiclass",
    "jacoco",
    "javax",
    "jdbc",
    "jjwt",
    "jmeter",
    "jsonwebtoken",
    "keepalive",
    "lazerycode",
    "logback",
    "mapstruct",
    "projectlombok",
    "qameta",
    "sortpom",
    "spotbugs",
    "springframework",
    "subresults",
    "testclass",
    "testcontainers",
    "testdb",
    "testname",
    "testuser",
    "threadgroups",
    "wiremock"
  ],
  "java.debug.settings.onBuildFailureProceed": true
}
