<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Suppress defensive copy warnings for Lombok-generated model classes -->
  <!-- These are acceptable for DTOs and entities where performance is important -->

  <!-- Suppress EI_EXPOSE_REP and EI_EXPOSE_REP2 for all model classes -->
  <Match>
    <Class name="~.*\.model\.dto\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <Match>
    <Class name="~.*\.model\.entity\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <Match>
    <Class name="~.*\.model\.dto\.request\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <Match>
    <Class name="~.*\.model\.dto\.response\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <!-- Specifically suppress for Lombok builder classes -->
  <Match>
    <Class name="~.*Builder"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <!-- Suppress SS_SHOULD_BE_STATIC for Spring Configuration Properties -->
  <!-- These fields are used by Spring's configuration property binding and must be instance fields -->
  <Match>
    <Class name="~.*\.config\..*Config.*"/>
    <Bug pattern="SS_SHOULD_BE_STATIC"/>
  </Match>

  <!-- Suppress UWF_NULL_FIELD for optional configuration fields -->
  <!-- These fields are set to null as default values and may be overridden by properties -->
  <Match>
    <Class name="~.*\.config\..*Config.*"/>
    <Bug pattern="UWF_NULL_FIELD"/>
  </Match>

  <!-- Suppress EI_EXPOSE_REP warnings for Spring Configuration Properties -->
  <!-- Configuration classes need to expose their internal state for Spring binding -->
  <Match>
    <Class name="~.*\.config\..*Config.*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <!-- Suppress EI_EXPOSE_REP warnings for Spring Service classes -->
  <!-- Service classes use constructor-based dependency injection with managed Spring beans -->
  <Match>
    <Class name="~.*\.service\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>
</FindBugsFilter>
